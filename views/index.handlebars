<div class="row">
  <div class="col-md-6">

    <h1>Burgers!</h1>

    <h2>Burger up for grabs!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/eat-it }}
      {{/unless}}
      {{/each}}
    </ul>

    <h2>Burger that has been eaten!</h2>

    <ul id="eaten">
      {{#each burgers}}
      {{#if devoured}}
      <li>{{burger_name}}</li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>



      <button type="submit">Add Flavor</button>
    </form>
  </div>
</div>